<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_artikel_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_aktivitas_hari_ini"
        android:clipToOutline="true"
        android:elevation="2dp"
        android:outlineProvider="background"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:id="@+id/artikelLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:elevation="3dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/petik_tomat_img" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/artikelLLTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/artikelLL"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/label_artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_label_artikel_rv"
                android:fontFamily="@font/manrope_bold"
                android:paddingStart="6dp"
                android:paddingTop="1dp"
                android:paddingEnd="6dp"
                android:paddingBottom="1dp"
                android:text="LABEL"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/judul_artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/manrope_bold"
                android:text="Judul Artikel"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/artikel_date"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:lineSpacingExtra="5dp"
                android:text="23 mei 2023"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>