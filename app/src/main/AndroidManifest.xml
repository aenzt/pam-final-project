<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logonotext"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.Growfood.Starting"
        tools:targetApi="31">

        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.GrowFood"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/Theme.GrowFood"
            android:exported="false" />

        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.GrowFood"
            />
        <activity
            android:name=".DiseaseListActivity"
            android:exported="false"
            android:theme="@style/Theme.GrowFood"
            />
        <activity
            android:name=".PlantListActivity"
            android:exported="false"
            android:theme="@style/Theme.GrowFood" />
        <activity
            android:name=".EnsiklopediaActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>